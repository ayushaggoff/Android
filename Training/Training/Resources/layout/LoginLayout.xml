<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="35dp"
    android:paddingRight="35dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="#20318B">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:paddingBottom="20dp">
        <TextView
            android:text="iReceipt"
            android:textColor="@android:color/darker_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Welcome Back!"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:paddingTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/a67layers"
            android:scaleType="fitCenter"
            android:layout_weight="0.25"
            android:id="@+id/ImageView_UserLogin"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textWebEmailAddress"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:textColorHint="@android:color/black"
            android:background="@drawable/rounded_edittext"
            android:hint="@string/edtTxt_Email"
            android:id="@+id/editText_email"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textWebPassword"
            android:padding="10dp"
            android:textColorHint="@android:color/black"
            android:background="@drawable/rounded_edittext"
            android:hint="@string/edtTxt_Password"
            android:id="@+id/editText_password"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password"
            android:layout_gravity="right"
            android:textColor="@android:color/holo_blue_dark"
            android:background="@color/mtrl_btn_transparent_bg_color"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:background="@drawable/roundButton"
            android:paddingLeft="90dp"
            android:paddingRight="90dp"
            android:id="@+id/buttonlogin"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login Via OTP"
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:background="@color/mtrl_btn_transparent_bg_color"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#20318B"
                android:src="@drawable/ic_facebook"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_google"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="Don't havee an account?"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SignUp"
                android:textColor="@android:color/holo_blue_dark"
                android:background="@color/mtrl_btn_transparent_bg_color"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
